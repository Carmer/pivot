<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 form-styles">

      <%= form_for([:admin, @category]) do |f|%>
          <%= f.label :name, "Category Title" %>
          <%= f.text_field :name, placeholder: "required", class: "form-control" %>

          <%= f.label :description, "Category Description" %>
          <%= f.text_area :description, placeholder: "required", class: "form-control" %>
        <div class="text-center">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
