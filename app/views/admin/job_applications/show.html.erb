<div class="admin_job_application_show">
  <div class="container dashboard-page">
    <div class="jobs-list row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Application Information</h1>
        <h3>Candidate: <%= @job_application.user.name %> - email: <%= @job_application.user.email %></h3>
          <h4>Applied: <%= @job_application.date_applied(@job_application.created_at) %></h4>
            <h4>Current Status: <%= @job_application.show_status %></h4>

        <table class="table table-bordered table-striped"class="table-striped">
          <tr>
            <td>Job Title</td>
            <td>Job Posting Cost</td>
          </tr>
          <tr>
            <td><%=link_to @job_application.job.title, job_path(@job_application.job) %></td>
            <td><%= number_to_currency(@job_application.job.posting_cost / 100.00) %></td>
          </tr>
        </table><br><br>

          <h4>
            Change Application's Status:
          </h4>
            <p><%= link_to "Accepted", admin_job_application_update_path({job_application_id: @job_application.id, status: "processing"}), method: "post", class: "btn btn-primary" %></p>
            <p><%= link_to "Rejected", admin_job_application_update_path({job_application_id: @job_application.id, status: "processed"}), method: "post", class: "btn btn-primary" %></p>
      </div>
    </div>
  </div>
</div>
