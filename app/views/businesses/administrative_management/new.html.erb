<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 form-styles">
      <h2>Add New Business Administrator</h2>
      <%= form_for @business_admin, url: {:controller => "administrative_management", :action => 'create', html: {method: 'put'}, business: @user.id }  do |f| %>
        <%= f.label :name, 'Name  (required)' %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :username, 'Username  (required)' %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.label :title, 'Title  (suggested)' %>
        <%= f.text_field :title, placeholder: "Title", class: 'form-control' %>

        <%= f.label :bio, 'Bio' %>
        <%= f.text_area :description, placeholder: "Write a short bio for yourself", class: 'form-control' %>

        <%= f.label :email, 'Email  (required)' %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :location, 'Location  (required)' %>
        <%= f.text_field :location, class: 'form-control' %>

        <%= f.label :password, 'Password  (required)' %>
        <%= f.password_field :password, class: 'form-control' %></p>

        <%= f.label :password_confirmation, 'Password confirmation  (required)' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.label :picture, "Attach a Picture" %>
        <%= f.file_field :picture, class: 'form-control' %>

        <div class="text-center">
          <%= f.submit "Create my account", class: "btn btn-primary" %>
        </div>

      <% end %>


      <hr>


    </div>
  </div>
</div>
