<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 form-styles">

      <h1>Create a New Job Listing</h1>

      <h4>ALL FIELDS REQUIRED**</h4>
      <%= form_for @job, url: {:controller => "businesses/jobs", :action => 'create', html: {method: 'put'}, business: @business.slug }  do |f| %>
        <%= f.text_field :title, placeholder: "Job title", class: 'form-control'  %>
        <%= f.text_area :description, placeholder: "Job description", class: 'form-control' %>
        <%= f.collection_check_boxes(:category_ids, @categories, :id, :name) %><br>


        <%= f.label :status  %>
        Retired <%= f.radio_button :status, false %>
        Active <%= f.radio_button :status, true  %><br>
        <%= f.submit "Submit Job", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
