<div class="container">
  <h1>Job Categories</h1>

  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
        <% @categories.each do |category| %>
          <div class="category_name">
              <h4><%= link_to(category.name, category_path(category))%></h4>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
