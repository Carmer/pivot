<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">



      <h2>Your Basket</h2>
      <table border = 2px >
        <tr>
          <td>Company</td>
          <td>Position</td>
          <td>Remove</td>
        </tr>
        <tr>
      <% @jobs.each do |job| %>

          <td><%= job.user.username %></td>
          <td><%= job.title %></td>
          <td><%= button_to "Remove", checkout_remove_path(job_id: job.id)%></td>
        </tr>
      <% end %>
      </table>

      <% if current_user %>
        <%= form_for :resume, url: checkout_confirmation_path, html: { multipart: true } do |f| %>
        <%= f.label :resume %>
        <%= f.file_field :resume %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      <% else %>
      <%= button_to "Submit", new_user_path(origin: {destination: "checkout"}), method: :get %>
      <% end %>


      </div>


  </div>

</div>
