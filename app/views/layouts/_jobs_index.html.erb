<div class="container">

<h2>All Jobby Jobs</h2>

  <% @jobs.each do |job| %>

    <div class="col-lg-3 col-md-4 col-sm-6">

      <% if logged_in? %>

        <% if current_user.admin?%>
          <h5> <%= link_to "Edit", edit_admin_job_path(job) %> </h5>

          <% render "layout/job_show", locals {job: job} %>
          
          <h4> <%= link_to "#{job.title}",job_path(job) %> </h4>
        <% else %>
          <h4> <%= link_to "#{job.title}",job_path(job) %> </h4>
        <% end %>
        <% else %>
          <h4> <%= link_to "#{job.title}",job_path(job) %> </h4>

      <% end %>

    </div>

  <% end %>

</div>
