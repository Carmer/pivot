<div class="container">
  <div class="jobs-list row">
    <div class="col-md-6 col-md-offset-3">


      <div class="pagination_centered">
        <%= will_paginate @jobs %>
      </div>


      <% @jobs.each do |job| %>

        <div class="jobs-individual">

          <% if logged_in? %>
            <% if current_user.admin? %>
              <h3> <%= link_to "#{job.title}",job_path(job) %> </h4>
              <p> <%= job.description %> </p>
              <div class="btn center-block">
                <%= link_to "Edit", edit_admin_job_path(job), class: 'btn btn-md btn-primary' %>
              </div>

            <% else %>
              <h3> <%= link_to "#{job.title}",job_path(job) %> </h4>
              <p> <%= job.description %> </p>
          <% end %>

            <% else %>
              <h3> <%= link_to "#{job.title}",job_path(job) %> </h4>
              <p> <%= job.description %> </p>
            <% end %>

        </div>

      <% end %>

        <div class="container">
          <div class="jobs-list row">
            <div class="col-md-6 col-md-offset-2">
            <% if current_admin? || current_business? || current_business_admin? %>
              <%= link_to "Add Job to Basket", new_business_job_path(business: current_user.slug), class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>
