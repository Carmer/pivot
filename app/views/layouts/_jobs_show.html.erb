<div class="container">
  <div class="jobs-list row">
    <div class="col-md-6 col-md-offset-3">


      <div class="jobs-show">

        <h3><%= @job.title %></h3>

        <%= image_tag User.find(@job.user_id).picture.url(:medium) %>

        <h4>JOB DESCRIPTION:</h4>
        <p> <%= @job.description %> </p>


        <h4>JOB CATEGORIES:</h4>

        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <ul>
              <% @job.categories.each do |category| %>
                <li> <%= category.name %> </li>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="btn center-block">
          <%= button_to "Apply to Job", checkout_path(job_id: @job.id), class: 'btn btn-md btn-primary' %>
        </div>

        <% if current_admin? || current_business_admin? || current_business? %>
          <p><%= link_to "Edit", edit_business_job_path(business: @job.user.slug) %></p>
        <% end %>

      </div>


    </div>
  </div>
</div>
