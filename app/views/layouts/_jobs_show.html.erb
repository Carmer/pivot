<div class="container">
  <div class="jobs-list row">
    <div class="col-md-6 col-md-offset-3">


      <div class="jobs-show">

        <h3><%= @job.title %></h3>

        <%= image_tag User.find(@job.user_id).picture.url(:medium) %>

        <h4>JOB DESCRIPTION:</h4>
        <p> <%= @job.description %> </p>


        <h4>JOB CATEGORIES:</h4>

        <div class="row">
          <div class="col-md-4 col-md-offset-4">
              <% @job.categories.each do |category| %>
                <p> <%=link_to "#{category.name}", category_path(category) %> </p>
              <% end %>
          </div>
          </div>

        <div class="btn center-block">
          <%= button_to "Add Job to Basket", checkout_path(job_id: @job.id), class: 'btn btn-md btn-primary' %><br>

        <% if current_admin? %>
          <div class="btn center-block">
            <%= link_to "Edit", edit_admin_job_path(@job), class: 'btn btn-md btn-primary' %>
          </div>
        <% elsif current_business_admin? || current_business? %>
          <%= link_to "Edit", edit_business_job_path(business: @job.user.slug), class: 'btn btn-md btn-primary' %>
        <% end %>

        </div>
      </div>


    </div>
  </div>
</div>
